# AI Intelligence Explosion Detection Red Team - Environment Configuration

# Python environment
PYTHON_ENV=development

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=ai_redteam.log

# API Keys (set these for production use)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Database configuration
DATABASE_URL=sqlite:///./ai_redteam.db

# Redis configuration (for caching and monitoring)
REDIS_URL=redis://localhost:6379

# Monitoring configuration
MONITORING_INTERVAL=30
ALERT_THRESHOLD_CONCERNING=0.6
ALERT_THRESHOLD_CRITICAL=0.8
ALERT_THRESHOLD_EXPLOSIVE=0.95

# Dashboard configuration
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
DASHBOARD_AUTO_REFRESH=30

# CVD (Coordinated Vulnerability Disclosure) configuration
CVD_DISCLOSURE_PERIOD_DAYS=30
CVD_EMERGENCY_HOURS=24
CVD_AUTO_DISCLOSURE=true

# Compliance configuration
EU_AI_ACT_COMPLIANCE=true
NIST_RMF_COMPLIANCE=true
BLETCHLEY_COMPLIANCE=true

# Security configuration
ENCRYPTION_KEY_PATH=./keys/encryption.key
AUDIT_LOG_RETENTION_DAYS=365
SENSITIVE_DATA_MASKING=true

# Model testing configuration
MAX_CONCURRENT_TESTS=5
TEST_TIMEOUT_SECONDS=60
SAFETY_CHECK_ENABLED=true

# Collaboration and reporting
GITHUB_ORG=ai-redteam
GITHUB_REPO=intelligence-explosion-detection
REPORT_AUTO_GENERATION=true

# International cooperation
SHARE_FINDINGS_INTERNATIONALLY=true
COORDINATE_WITH_AI_SAFETY_ORGS=true
